<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.App.Start" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/purple_200</item>

        // Use windowSplashScreenAnimatedIcon to add either a drawable or an
        // animated drawable. One of these is required.
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="windowSplashScreenAnimationDuration">3000</item>

        // Set the theme of the Activity that directly follows your splash screen.
        <item name="postSplashScreenTheme">@style/Theme.SubmissionOne</item>
    </style>
</resources>